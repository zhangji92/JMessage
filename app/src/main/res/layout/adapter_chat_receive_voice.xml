<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/chat_send_layout">

    <!--发送的时间-->
    <include layout="@layout/chat_time" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/chat_avatar"
            style="@style/chat_send_avatar_style"
            android:layout_alignParentStart="true" />

        <FrameLayout
            android:id="@+id/chat_voice_group"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/chat_avatar">

            <TextView
                android:id="@+id/chat_content"
                style="@style/msg_text_style"
                android:background="@drawable/msg_receive_back" />

            <ImageView
                android:id="@+id/chat_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="15dp"
                android:background="@drawable/voice_receive"
                android:contentDescription="@string/app_log" />

            <TextView
                android:id="@+id/chat_voice_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="10dp"
                android:text="@string/voice_length"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </FrameLayout>

        <ImageView
            android:id="@+id/chat_read_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/chat_voice_group"
            android:background="@mipmap/voice_unread"
            android:contentDescription="@string/app_log"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>