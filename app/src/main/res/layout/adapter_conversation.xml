<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/conversation_header"
        style="@style/chat_send_avatar_style"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/app_log" />


    <TextView
        android:id="@+id/conversation_un_num"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/solid_f3_clire"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/conversation_name"
        style="@style/chat_text_date_style"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/conversation_header"
        android:padding="0dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/conversation_content"
        style="@style/chat_text_date_style"
        android:layout_alignBottom="@id/conversation_header"
        android:layout_toEndOf="@id/conversation_header"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="0dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/conversation_time"
        style="@style/chat_text_date_style"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:padding="0dp"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/conversation_header"
        android:layout_marginTop="10dp"
        android:background="@color/line_back" />


</RelativeLayout>